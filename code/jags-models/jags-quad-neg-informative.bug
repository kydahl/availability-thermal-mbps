model {
  
  for (i in 1:N) {
    Y[i] ~ dnorm(mu[i], tau)T(0,)
    mu.temp[i] <- -c*(T[i]-T0)*(T[i]-Tm)*((T[i]>T0))*((T[i]<Tm))
    mu[i]<- mu.temp[i]*(mu.temp[i]>0) + 0*(mu.temp[i]<0)
  }
  
  T0  ~ dgamma(hypers[1,1], hypers[2,1])
  Tm ~ dgamma(hypers[1,2], hypers[2,2])
  c  ~ dgamma(hypers[1,4], hypers[2,4])
  sigma ~ dgamma(hypers[1,3], hypers[2,3])
  tau <- 1 / (sigma * sigma)

}
